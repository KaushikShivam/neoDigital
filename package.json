{
	"name": "neodigital",
	"version": "1.0.0",
	"description": "A landing page for a Creative Design Agency",
	"main": "index.js",
	"scripts": {
		"watch:sass": "node-sass sass/main.scss css/style.css -w",
		"compile:sass": "node-sass sass/main.scss css/style.comp.css",
		"prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
		"compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
		"build:css": "npm-run-all compile:sass prefix:css compress:css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/KaushikShivam/neoDigital.git"
	},
	"keywords": [
		"landing",
		"page",
		"sass",
		"css",
		"scss"
	],
	"author": "Shivam Kaushik",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/KaushikShivam/neoDigital/issues"
	},
	"homepage": "https://github.com/KaushikShivam/neoDigital#readme",
	"dependencies": {
		"autoprefixer": "^9.6.1",
		"node-sass": "^4.12.0",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^6.1.3"
	}
}
